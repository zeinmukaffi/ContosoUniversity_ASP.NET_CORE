@model ContosoUniversity.Models.Enrollment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Enrollment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Course</label>
                <select asp-for="CourseID" class ="form-control" asp-items="ViewBag.CourseID">
                    <option selected="selected" value="">Please select</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Student</label>
                <select asp-for="StudentID" class ="form-control" asp-items="ViewBag.StudentID">
                   <option selected="selected" value="">Please select</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Grade</label>
                <select class ="form-control" asp-for="Grade" asp-items="Html.GetEnumSelectList<Grade>()">
                    <option selected="selected" value="">Please select</option>
                </select>                
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px;">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info text-white">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
