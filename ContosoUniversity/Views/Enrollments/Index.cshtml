@model PaginatedList<ContosoUniversity.Models.Enrollment>

@{
    ViewData["Title"] = "Enrollments";
}

<style>
    table{
        margin-top: 20px;
    }

    .table a{
    text-decoration: none;
    }

    /*.opsi a:hover{
    text-decoration: underline;
    }*/

    h2{
        margin-bottom: 20px;
    }

    .tbl{
        display: flex;
        gap: 1rem;
    }
</style>

<h2>Contoso University - Enrollments</h2>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Find by grade: @Html.DropDownList("SearchGrade",
            new SelectList(Enum.GetValues(typeof(ContosoUniversity.Models.Grade))),
            "Select Grade")
            Find by course: <input type="text" name="searchCourse" value="@ViewData["CurrentFilter2"]" />
            Find by student: <input type="text" name="searchStudent" value="@ViewData["CurrentFilter3"]" />
            <input type="submit" value="Search" class="btn btn-primary" />
        </p>
    </div>
</form>

<div class="tbl">
    <a asp-action="Create" class="btn btn-primary">Create New [+]</a>
    <a asp-action="Index" class="btn btn-info text-white">Back to List</a>
</div>

<table class="table table-hover">
    <thead>
        <tr class="table-light">
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["GradeSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-currentFilter2="@ViewData["CurrentFilter"]" asp-route-currentFilter3="@ViewData["CurrentFilter3"]">Grades</a><span class="e-icons e-chevron-up-fill"></span>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["CourseSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-currentFilter2="@ViewData["CurrentFilter2"]" asp-route-currentFilter3="@ViewData["CurrentFilter3"]">Courses</a><span class="e-icons e-chevron-up-fill"></span>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["StudentSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-currentFilter2="@ViewData["CurrentFilter2"]" asp-route-currentFilter3="@ViewData["CurrentFilter3"]">Students</a>
            </th>
            <th>Opsi</th>
        </tr>
    </thead>
    <tbody class="opsi">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.FirstMidName)
                @Html.DisplayFor(modelItem => item.Student.LastName)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.EnrollmentID">Edit</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.EnrollmentID">Details</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.EnrollmentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}

<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   asp-route-currentFilter2="@ViewData["CurrentFilter2"]"
   asp-route-currentFilter3="@ViewData["CurrentFilter3"]"
   class="btn btn btn-dark @prevDisabled">
    Previous
</a>
<a asp-action="Index"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   asp-route-currentFilter2="@ViewData["CurrentFilter2"]"
   asp-route-currentFilter3="@ViewData["CurrentFilter3"]"
   class="btn btn btn-dark @nextDisabled">
    Next
</a>
